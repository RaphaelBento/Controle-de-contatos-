@model ContatoModel

@{
    ViewData["Title"] = "Editar contatos";
}

<div class="text-center">

    <h1 class="display-4" style="color:white;">Editar contato</h1>


</div>

<form method="post" asp-controller="Contato" asp-action="Alterar">
    <input type="hidden" asp-for="Id"/>
    <div class="form-group">
        <label for="nome">Nome</label>
        <input asp-for="Nome" class="form-control" placeholder="Digite o nome do contato">
        @Html.ValidationMessageFor(x => x.Nome)
    </div>
    <div class="form-group">
        <label for="email">Email</label>
        <input type="email" asp-for="Email" class="form-control" placeholder="Digite o Email do contato">
        @Html.ValidationMessageFor(x => x.Email)
    </div>
    <div class="form-group">
        <label for="telefone">Telefone</label>
        <input type="tel" Asp-for="Celular" class="form-control" placeholder="Digite o numero do contato">
        @Html.ValidationMessageFor(x => x.Celular)
    </div>
    <div class="">
        <button type="submit" class="btn btn-primary btn-group-sm">
            <img src="~/Images/CanetaAlterar.png" alt="Imagem agenda alterar" style="height:30px;width:30px;" />
            Alterar
        </button>
        <button class="btn btn-warning btn-group-sm" asp-controller="Contato" asp-action="Index" role="button" style="color:whu;">
            <img src="~/Images/cadernoVoltar.png" alt="Imagem agenda alterar" style="height:30px;width:30px;" />
            Voltar
        </button>
    </div>
</form>