@model ContatoModel
@{
    ViewData["Title"] = "Criar contatos";
}
<div class="text-center">

    <h1 class="display-4" style="color:white;">Cadastrar contato</h1>


</div>

<form asp-controller="Contato" asp-action="Criar" method="post">
    <div class="form-group">
        <label for="nome">Nome</label>
        <input class="form-control" asp-for="Nome" placeholder="Digite o nome do contato">
        @Html.ValidationMessageFor(x => x.Nome)
    </div>
    <div class="form-group">
        <label for="email">Email</label>
        <input type="email" class="form-control" asp-for="Email" placeholder="Digite o Email do contato">
        @Html.ValidationMessageFor(x => x.Email)
    </div>
    <div class="form-group">
        <label for="telefone">Telefone</label>
        <input class="form-control" asp-for="Celular" placeholder="Digite o numero do contato">
        @Html.ValidationMessageFor(x => x.Celular)
    </div>
    <div class="">
        <button type="submit" class="btn btn-primary btn-group-sm" style=" margin:10px;">
            <img src="~/Images/Adicionar.png" alt="Imagem agenda editar" style="height:30px;width:30px;" />
            Adicionar
        </button>
        <a class="btn btn-warning  btn-group-sm" asp-controller="Contato" asp-action="Index" role="button">
        <img src="~/Images/seta-curva.png" alt="Imagem seta voltar" style="height:30px;width:30px;"/>
        Voltar
        </a>
    </div>

</form>