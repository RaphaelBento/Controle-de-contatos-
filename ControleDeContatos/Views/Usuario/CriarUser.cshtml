@model UsuarioModel
@using ControleDeContatos.Enums

@{
    ViewData["Title"] = "Criar novo usuário";
}

<div class="text-center">

    <h1 class="display-4" style="color:white;">Cadastrar contato</h1>


</div>

<form asp-controller="Usuario" asp-action="Criar" method="post">
    <div class="form-group">
        <label for="nome">Nome</label>
        <input class="form-control" asp-for="Nome" placeholder="Digite o nome do Usuario">
        @Html.ValidationMessageFor(x => x.Nome)
    </div>
    <div class="form-group">
        <label for="email">Email</label>
        <input type="email" class="form-control" asp-for="Email" placeholder="Digite o Email do Usuario">
        @Html.ValidationMessageFor(x => x.Email)
    </div>
    <div class="form-group">
        <label for="telefone">Login</label>
        <input class="form-control" asp-for="Login" placeholder="Digite o Login do Usuario">
        @Html.ValidationMessageFor(x => x.Login)
    </div>
    <div class="form-group">
        <label for="telefone">Senha</label>
        <input class="form-control" asp-for="Senha" placeholder="Digite a senha do Usuario">
        @Html.ValidationMessageFor(x => x.Senha)
    </div>
    <div class="form-group">
        <label for="telefone">Perfil</label>
       
        <select asp-for="Perfil">
            <option value="0">Selecione</option>
            <option value="@PerfilEnum.Admin">Administrador</option>
            <option value="@PerfilEnum.Publico">Público</option>
        </select>
    </div>
    <div class="">
        <button type="submit" class="btn btn-primary btn-group-sm" style=" margin:10px;">
            <img src="~/Images/Adicionar.png" alt="Imagem agenda editar" style="height:30px;width:30px;" />
            Adicionar
        </button>
        <a class="btn btn-warning  btn-group-sm" asp-controller="Usuario" asp-action="Index" role="button">
            <img src="~/Images/seta-curva.png" alt="Imagem seta voltar" style="height:30px;width:30px;" />
            Voltar
        </a>
    </div>

</form>